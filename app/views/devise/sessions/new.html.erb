<div class="container-fluid px-5 mt-5">
<h2>Jätkamiseks logi sisse</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label: "Parool" %>
    <%= f.input :remember_me, label: "Jäta mind meelde", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Logi sisse", class: "btn btn-primary" %>
  </div>
<% end %>
<div class="my-5">
  <%= render "devise/shared/links" %>
</div>
</div>